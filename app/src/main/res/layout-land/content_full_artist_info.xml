<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_full_artist_info" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zerogerc.com.artistinfo.FullArtistInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            style="@style/TextSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/full_info_genres"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <TextView
            style="@style/TextSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/full_info_track_albums"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_below="@id/full_info_genres"/>

        <TextView
            style="@style/TextHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/full_info_bio_title"
            android:text="@string/biography"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_below="@id/full_info_track_albums"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/full_info_bio"
            android:layout_below="@id/full_info_bio_title"/>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
